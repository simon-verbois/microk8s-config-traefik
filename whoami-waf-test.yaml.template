---
apiVersion: v1
kind: Service
metadata:
  name: whoami-waf
  namespace: default
spec:
  ports:
    - port: 80
      targetPort: 80
  selector:
    app: whoami-waf

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: whoami-waf
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      app: whoami-waf
  template:
    metadata:
      labels:
        app: whoami-waf
    spec:
      containers:
        - name: whoami
          image: traefik/whoami:latest
          ports:
            - containerPort: 80

---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: whoami-waf-test
  namespace: default
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`waf-test.example.org`)
      kind: Rule
      middlewares:
        - name: coraza-waf
          namespace: traefik
        - name: security-headers
          namespace: traefik
        - name: rate-limit
          namespace: traefik
        - name: geoblock
          namespace: traefik
      services:
        - name: whoami-waf
          port: 80
  tls:
    certResolver: ovhresolver
    domains:
      - main: "waf-test.example.org"
    options:
      name: tls-profile
      namespace: traefik
